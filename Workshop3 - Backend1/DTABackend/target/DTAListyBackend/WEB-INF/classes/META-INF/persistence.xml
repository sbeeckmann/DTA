<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence">
    <persistence-unit name="em" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:/jdbc/dta</jta-data-source>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
        <properties>
            <property name="wildfly.jpa.regionfactory" value="false"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <!--
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:postgresql://ec2-18-197-101-50.eu-central-1.compute.amazonaws.com:6432/mycrocast_postgres_db"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="Hells!ng2"/>
            -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect"/>
            <property name="hibernate.show_sql" value="false"/>

            <property name="hibernate.jdbc.batch_size"
                      value="25"/>
        </properties>
    </persistence-unit>
</persistence>
